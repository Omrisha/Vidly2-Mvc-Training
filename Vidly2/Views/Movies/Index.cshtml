@model IEnumerable<Vidly2.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

@if (!Model.Any())
{
    <text>There's no movies in this Blockbuster.</text>
}
else
{
    @Html.ActionLink("Create", "New", "Movies", new { id = 0 }, new { @class = "btn btn-primary" })

    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(movie.Name, "Edit", "Movies", new {id = movie.Id}, null)
                </td>
                <td>
                    @movie.Genre.Name
                </td>
            </tr>
        }
        </tbody>
    </table>
}
